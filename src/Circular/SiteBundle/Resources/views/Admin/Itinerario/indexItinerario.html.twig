                                    <td>{{ itinerario.id }}</td>
                                    <td>{{ itinerario.partida.nome }} ({{ itinerario.partida.local.nome }})</td>
                                    <td>{{ itinerario.destino.nome }} ({{ itinerario.destino.local.nome }})</td>
                                    <td>{{ itinerario.observacao|default('-') }}</td>
