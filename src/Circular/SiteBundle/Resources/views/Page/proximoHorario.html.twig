<div id="caixa-dados">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6 text-center">
                    <span class="glyphicon glyphicon-usd"></span> {{ proximoHorario.itinerario.valor }}
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6 text-center">
                    <span class="glyphicon glyphicon-plane"></span> {{ proximoHorario.itinerario.empresa }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            {% if proximoHorario.itinerario.observacao != '' %}
                <h5>{{ proximoHorario.itinerario.observacao }}</h5>
                <br />
            {% endif %}
            <h4>Pr&oacute;ximo Hor&aacute;rio</h4>
            <h2 style="color: #DD0000">{{ proximoHorario.horario.nome|date('H:i') }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <a href="#{{ proximoHorario.itinerario.id }}" 
               class="btn btn-primary disabled" id="btn-todos-horarios">Ver Todos</a>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('#caixa-dados').on('click', '#btn-todos-horarios', function() {
                var id = $(this).attr('href').replace('#', '');
                
                alert(id);
                
                console.log(id);

                var data = {};
                data['itinerario'] = id;

                $.ajax({
                    url: '{{ path('circular_site_consulta_todos_horarios') }}',
                    type: 'POST',
                    data: data,
                    success: function(html) {
                        console.log(html);
                        //$('#caixa-dados').replaceWith(html);
                        //$('#btn-todos-horarios').removeClass('disabled');
                    }
                });
            });
    });
</script>