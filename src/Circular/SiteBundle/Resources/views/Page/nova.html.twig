                                //$('#modal-load').modal('hide');
                                $('#btn-enviar').button('reset');
                                alert("Houve um problema ao enviar a mensagem. Por favor tente novamente");
                            } else {
                                //$('#modal-load').modal('hide');
                                $('#btn-enviar').button('reset');
                                alert("Mensagem Enviada! Obrigado!");
                                $('#form-contato')[0].reset();
                            }
                        }
                    });

                    return false;

                },
                rules: {
                    'contato[nome]': "required",
