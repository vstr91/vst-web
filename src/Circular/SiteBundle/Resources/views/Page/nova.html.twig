                        scrollwheel: true,
                        scaleControl: false,
                        disableDefaultUI: false,
                        mapTypeControl: true,
                        mapTypeId: "circular"
                    }
                },
                styledmaptype: {
                    id: "circular",
                    options: {
                        name: "Circular"
                    },
                    styles: [
