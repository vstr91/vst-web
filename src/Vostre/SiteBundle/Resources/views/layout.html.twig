{% block body %}
        {% block menu %}
        <div class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle v-botao-collapse" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Navega&ccedil;&atilde;o</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
{#                    <a href="#" class="navbar-brand">Vostr&egrave;</a>#}
                    <a href="{{ path('vostre_site_homepage') }}" class="navbar-brand v-logo"><img src="{{ asset('imagens/logo-preta-20.png') }}" /></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% for itemMenu in itensMenu %}
                        <li class="link-menu-principal links-menu">
                            <a href="{{ path(itemMenu.caminho) }}">{{ itemMenu.titulo }}</a>
                        </li>
                        {% else %}
                        <li class="link-menu-principal links-menu">
                            Nenhum menu cadastrado
                        </li>
                        {% endfor %}
                    </ul>
                    {# TRADUCOES E GERENCIADOR - ATIVAR POSTERIORMENTE #}
                    <p class="navbar-text navbar-right v-bandeiras visible-sm visible-md visible-lg">
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale' : 'pt_BR'})) }}">
                            <img src="{{ asset('imagens/bra.png') }}" />
                        </a>
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale' : 'en'})) }}">
                            <img src="{{ asset('imagens/usa.png') }}" />
                        </a>
                    </p>
                    {#<ul class="nav navbar-nav navbar-right">
                        <li id="link-central-cliente" class="links-menu">
                            <a href="{{ path('vostre_site_central_cliente') }}" class="link-destaque">Central do Cliente</a></li>
                    </ul>#}
                    <p class="navbar-text navbar-right v-bandeiras visible-xs">
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale' : 'pt_BR'})) }}">
                            <img src="{{ asset('imagens/bra.png') }}" />
                        </a>
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale' : 'en'})) }}">
                            <img src="{{ asset('imagens/usa.png') }}" />
                        </a>
                    </p>
                    {# FIM TRADUCOES E GERENCIADOR #}
                </div>
            </div>
        </div>
        {% endblock %}
        {% block conteudo %}
        {% endblock %}
        {% block rodape %}
        <footer>
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-6">
                        <p class="vostre-footer-texto">
                            <a href="tel:{% trans %}site.rodape.telefone-celular-raw{% endtrans %}" class="v-link-rodape">
                                <span class="glyphicon glyphicon-phone-alt v-cor-vermelho"></span> {% trans %}site.rodape.telefone-celular{% endtrans %}</a></p>
                    </div>
                    <div class="col-md-6 text-center">
                        <p class="vostre-footer-texto">
                            <a href="https://facebook.com/vostre" class="v-link-rodape" target="_blank">
                                <img src="{{ asset('imagens/facebook.png') }}" 
                                     alt="Facebook" 
                                     class="img-circle v-link-social" /> /vostre</a>
                            {#<img data-src="holder.js/30x30/auto/#D00:#D00/text:Third slide" alt="Facebook" 
                             class="img-circle v-link-social"> /vostre
                            <img data-src="holder.js/30x30/auto/#31B0D5:#31B0D5/text:Third slide" alt="Facebook" 
                             class="img-circle v-link-social"> /vostre#}
                        </p>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12">
                        <p class="vostre-footer-texto">&copy; Vostr&egrave; 2015-2016</p>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12">
                        <p class="vostre-footer-texto small">{% trans %}site.rodape.cookies{% endtrans %}</p>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}
{% endblock %}